import time
from gtts import gTTS

text_filepath = '/Users/sanjayj25/Desktop/zoom-helpline/speech_text.txt'
textFile = open(text_filepath, 'r')
speechText = textFile.read()
language = 'en'
myName = 'Sam'

if myName in speechText:
    myResponse = speechText[speechText.index(myName):]
    if '\n' in myResponse:
        myResponse = myResponse[:myResponse.index('\n')]
    search_engine_input = gTTS(text=myResponse, lang=language, slow=False)
    search_engine_input.save('/Users/sanjayj25/Desktop/zoom-helpline/input.txt')
